<div class = "all">

<h1>Uploads</h1>
  <div class = "new_img">
  <%= link_to 'Add New Photo', new_photo_path %>
  </div>


<div class = "border">
    <% @photos.each do |photo| %>
      <tr>
        <td><%= 'Caption: ' + photo.caption %></td>
        <td><%= image_tag photo.avatar.url(:medium) %></td>
        <td>You have <%= photo.get_likes.size %> like</td>
        <td><i class="fa fa-thumbs-o-up"><%= link_to '+1', positive_photo_path(photo)%></i> </td>
        <td><%= link_to '-1', negative_photo_path(photo)%> </td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </div>
    </div>